extends ../layout

block content

  h1.skill-show-page-heading
    input.skill-checkbox(type="checkbox", data-skill-id=skill.id, checked=skill.checked)
    span !{renderSkill(skill)}

  h2 Modules
  ul
    for moduleId in skill.modules
      - const module = digest.modules[moduleId]
      li
        a(href="/modules/"+module.id)= module.name
